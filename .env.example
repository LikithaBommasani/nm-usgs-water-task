# ============================================
# USGS API Configuration
# ============================================
# This is an example configuration file for the USGS Water Data Pipeline.
# Copy this file to .env and customize the values as needed.

# Parameter Codes API
USGS_PARAMETER_CODES_BASE_URL=https://api.waterdata.usgs.gov/ogcapi/v0/collections/parameter-codes/items
PARAM_CODES_OUTPUT_FILE=outputs/raw/parameter_codes.json
PARAM_CODES_QUERY_PARAMS={"f":"json","lang":"en-US"}
REFRESH_PARAMETER_CODES=false

# Statistic Codes API
USGS_STATISTIC_CODES_BASE_URL=https://api.waterdata.usgs.gov/ogcapi/v0/collections/statistic-codes/items
STAT_CODES_OUTPUT_FILE=outputs/raw/statistic_codes.json
STAT_CODES_QUERY_PARAMS={"f":"json","lang":"en-US"}
REFRESH_STATISTIC_CODES=false

# Monitoring Locations API
USGS_LOCATIONS_BASE_URL=https://api.waterdata.usgs.gov/ogcapi/v0/collections/monitoring-locations/items
OUTPUT_FILE=outputs/raw/locations.json
REFRESH_LOCATIONS=true
# Customize the query parameters below for your region and site type
# Available options:
#   - state_name: e.g., "New Mexico", "California", "Texas"
#   - county_name: e.g., "Santa Fe County", "Los Angeles County"
#   - site_type_code: "ST" (Stream), "LK" (Lake), "GW" (Groundwater), etc.
QUERY_PARAMS={"f":"json","lang":"en-US","skipGeometry":"true","limit":"10000","offset":"0","state_name":"New Mexico","agency_code":"USGS","county_name":"Santa Fe County","site_type_code":"ST"}

# Daily Values API
USGS_DV_BASE_URL=https://api.waterdata.usgs.gov/ogcapi/v0/collections/daily/items
DV_OUTPUT_FILE=outputs/raw/dv_last90days.json
# Customize parameter_code below for the measurements you want
# Common parameter codes:
#   - 00060: Discharge (ft³/s)
#   - 00010: Temperature, water (°C)
#   - 00011: Temperature, water (°F)
#   - 00065: Gage height (ft)
#   - 00095: Specific conductance (µS/cm)
DV_QUERY_PARAMS={"f":"json","lang":"en-US","skipGeometry":"true","limit":"10000","parameter_code":"00060,00010,00011"}
DV_BATCH_SIZE=25

# ============================================
# Data Processing Configuration
# ============================================

# Time range for daily values (in days)
# Default: 90 (last 3 months)
DV_TIME_RANGE_DAYS=90

# API request timeout (in seconds)
# Default: 60
API_TIMEOUT_SECONDS=60

# Visualization parameters (for dual-parameter plots)
# These should match parameter names from the USGS API
# Default: Discharge and Temperature
PLOT_PARAMETER_1=Discharge
PLOT_PARAMETER_2=Temperature, water

# ============================================
# Output File Paths
# ============================================

# Processed DataFrames (intermediate files)
OUTPUT_DV_DATAFRAME=outputs/processed/dv_dataframe.csv
OUTPUT_LOCATIONS_DATAFRAME=outputs/processed/locations_dataframe.csv
OUTPUT_JOINED_DATAFRAME=outputs/processed/joined_dv_locations.csv

# Final cleaned output
OUTPUT_CLEANED_DATAFRAME=outputs/final/cleaned.csv

# Visualizations (HTML plots)
OUTPUT_DUAL_AXIS_PLOT=outputs/visualizations/discharge_temperature_rio_grande.html
OUTPUT_SCATTER_PLOT=outputs/visualizations/temp_vs_discharge_scatter.html
